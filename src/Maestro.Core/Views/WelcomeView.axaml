<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Maestro.Core.Views.WelcomeView">
	<StackPanel Margin="40">
		<TextBlock FontSize="32" Text="MapGuide Maestro" />
		<TextBlock FontSize="18" Text="The authoring tool for MapGuide Open Source / AIMS" />

		<Grid Margin="0, 40, 0, 0" ColumnDefinitions="*, *">
			<StackPanel Spacing="10" Grid.Column="0">
				<TextBlock FontSize="24" Text="Start" />
				<TextBlock Text="Connect to Site" />
			</StackPanel>
			<StackPanel Spacing="10" Grid.Column="1">
				<TextBlock FontSize="24" Text="Useful Resources" />
				<TextBlock Text="User Guide" />
				<TextBlock Text="Project Website" />
			</StackPanel>
		</Grid>
	</StackPanel>
</UserControl>
